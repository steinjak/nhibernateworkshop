@model NHibernateWorkshop.Controllers.Blogs.BlogIndexModel

@{
    ViewBag.Title = "All blogs";
}

<h2>All blogs</h2>
<div>
    @foreach (var blog in Model.Blogs)
    {
        <div class="media">
            <div class="pull-left" style="width: 100px">
                <img class="pull-left" src="@string.Format("http://www.gravatar.com/avatar/{0}?s=100&d=monsterid", blog.Owner.Name.Md5())" />
                <div class="clearfix">@blog.Owner.Name</div>
            </div>
            <div class="media-body">
                <a href="@Url.Action("View", new {id=blog.Id})">@blog.Title</a>
            </div>
        </div>
    }
</div>
<a class="btn btn-default" href="@Model.UrlToNextPage">&laquo; Previous page</a>
<a class="btn btn-default" href="@Model.UrlToNextPage">Next page &raquo;</a>